#!/bin/bash

set -e

# Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

# Install packages from Homebrew
brew update
brew upgrade

brew install \
	ctags \
	git \
	neovim \
	pyenv \
	pyenv-virtualenv \
	pipenv \
	rbenv \
	goenv \
	zsh \
	zsh-syntax-highlighting \
	bat \
	ansible \
	gnupg \
	git-lfs \
	hub \
	lua \
	n \
	streamlink \
	unar \
	yarn

# Cask
brew tap homebrew/cask
brew cask install \
	1password \
	atom \
	discord \
	docker \
	firefox \
	gimp \
	google-backup-and-sync \
	google-chrome \
	google-japanese-ime \
	hyperswitch \
	insomnia \
	iterm2 \
	kap \
	karabiner-elements \
	obs \
	postico \
	slack \
	spotify \
	visual-studio-code \
	mactex \
	the-unarchiver \
	mpv \
	jasper \
	vlc \
	fork \
	oracle-jdk \
	wireshark
