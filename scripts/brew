#!/bin/bash

set -ex

# Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"

# Install packages from Homebrew
brew update
brew upgrade

brew install \
	ctags \
	git \
	neovim \
	pyenv \
	pyenv-virtualenv \
	pipenv \
	rbenv \
	zsh \
	zsh-syntax-highlighting \
	bat \
	git-lfs \
	gh \
	n \
	unar \
	fzf \
	pure

# Cask
brew tap homebrew/cask
brew install --cask \
	1password \
	discord \
	docker \
	firefox \
	gimp \
	google-chrome \
	google-japanese-ime \
	insomnia \
	iterm2 \
	obs \
	postico \
	slack \
	visual-studio-code \
	the-unarchiver \
	mpv \
	vlc \
	fork \
	wireshark \
	gpg-suite-no-mail
